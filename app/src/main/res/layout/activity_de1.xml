<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityManDe.De1Activity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ln_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dễ - 1"
            android:textSize="30sp"/>
        <TextView
            android:layout_marginLeft="110px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lỗi: 0/3"
            android:id="@+id/er"
            android:textSize="30sp"/>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/tv_time"
            android:textSize="30sp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/tv_start"
                android:textSize="100sp"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:gravity="center"
            android:id="@+id/tbl_play"
            android:background="#000000">
            <TableRow>
                <TextView
                    android:id="@+id/r1c1"
                    android:text=""
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="6"
                    android:id="@+id/r1c2"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="4"
                    android:id="@+id/r1c3"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="2"
                    android:id="@+id/r1c4"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="3"
                    android:id="@+id/r1c5"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="1"
                    android:id="@+id/r1c6"
                    style="@style/tv_item"
                    />

            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/r2c1"
                    android:text="3"
                    style="@style/tv_item"/>
                <TextView
                    android:id="@+id/r2c2"
                    android:text="1"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r2c3"
                    android:textColor="#001AFF"
                   style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r2c4"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="6"
                    android:id="@+id/r2c5"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="5"
                    android:id="@+id/r2c6"
                    style="@style/tv_item"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/r3c1"
                    android:text="6"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="4"
                    android:id="@+id/r3c2"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r3c3"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r3c4"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r3c5"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r3c6"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:text=""
                    android:id="@+id/r4c1"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="5"
                    android:id="@+id/r4c2"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="3"
                    android:id="@+id/r4c3"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="1"
                    android:id="@+id/r4c4"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r4c5"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r4c6"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />

            </TableRow>
            <TableRow >
                <TextView
                    android:text="4"
                    android:id="@+id/r5c1"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r5c2"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r5c3"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="5"
                    android:id="@+id/r5c4"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r5c5"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="3"
                    android:id="@+id/r5c6"
                    style="@style/tv_item"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:text="1"
                    android:id="@+id/r6c1"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r6c2"
                    android:textColor="#001AFF"
                   style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r6c3"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r6c4"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text="2"
                    android:id="@+id/r6c5"
                    style="@style/tv_item"
                    />
                <TextView
                    android:text=""
                    android:id="@+id/r6c6"
                    android:textColor="#001AFF"
                    style="@style/tv_item"
                    />

            </TableRow>
        </TableLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ln_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imgXoa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cuctay"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:id="@+id/imgCheck"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_num"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            style="@style/ip"
            android:text="1"
            android:id="@+id/ip1"
            android:background="@drawable/ip"/>
        <TextView
            android:text="2"
            android:background="@drawable/ip"
            style="@style/ip"
            android:id="@+id/ip2"
            />
        <TextView
            android:background="@drawable/ip"
            style="@style/ip"
            android:text="3"
            android:id="@+id/ip3"
            />
        <TextView
            style="@style/ip"
            android:background="@drawable/ip"
            android:text="4"
            android:id="@+id/ip4" />
        <TextView
            style="@style/ip"
            android:background="@drawable/ip"
            android:text="5"
            android:id="@+id/ip5"
            />
        <TextView
            style="@style/ip"
            android:background="@drawable/ip"
            android:text="6"
            android:id="@+id/ip6"/>
    </LinearLayout>
</LinearLayout>