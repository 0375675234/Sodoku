<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapDoActivity"
    android:orientation="vertical"
    android:background="#139342">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chao"
        android:id="@+id/tv_name_user"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="DỄ"
        android:onClick="chon_de"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:background="#45FF00"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="TRUNG BÌNH"
        android:onClick="chon_Tb"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:background="#FFE607"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="KHÓ"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:background="#FB0101"
        android:onClick="chon_kho"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_back"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:onClick="back"
        />
</LinearLayout>